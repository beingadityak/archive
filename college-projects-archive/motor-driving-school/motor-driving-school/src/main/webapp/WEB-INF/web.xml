<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login.do</servlet-name>
        <servlet-class>com.eazydrive.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup.do</servlet-name>
        <servlet-class>com.eazydrive.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout.do</servlet-name>
        <servlet-class>com.eazydrive.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test.do</servlet-name>
        <servlet-class>com.eazydrive.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>payment.do</servlet-name>
        <servlet-class>com.eazydrive.PaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>confirm.do</servlet-name>
        <servlet-class>com.eazydrive.ConfirmPaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login.do</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup.do</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout.do</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test.do</servlet-name>
        <url-pattern>/learner/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payment.do</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>confirm.do</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
